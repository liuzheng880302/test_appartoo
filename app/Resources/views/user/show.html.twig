{% extends 'base.html.twig' %}

{% block body %}
    <h1>User</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ user.adresse }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ user.telephone }}</td>
            </tr>
            <tr>
                <th>Site</th>
                <td>{{ user.site }}</td>
            </tr>
        </tbody>
    </table>

    <div class="btn-group-vertical">
        {{ form_start(delete_form) }}
        <a class="btn btn-primary" href="{{ path('user_index') }}">Back to the list</a>
        <a class="btn btn-warning" href="{{ path('user_edit', { 'id': user.id }) }}">Edit</a>
        <input class="btn btn-danger" type="submit" value="Delete">
        {{ form_end(delete_form) }}</tr>
    </div>

{% endblock %}
